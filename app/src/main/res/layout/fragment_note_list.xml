<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fNote">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/noteList"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fm_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:menu_fab_label="Main Menu"
        app:menu_colorNormal="@color/accent"
        app:menu_colorPressed="@color/fab_pressed"
        app:menu_icon="@mipmap/ic_add_white_36dp" >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_add_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_keyboard_voice_white_24dp"
            app:fab_colorNormal="@color/accent"
            app:fab_colorPressed="@color/fab_pressed"
            app:fab_size="mini"
            app:fab_label="New Voice Memo" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_insert_photo_white_24dp"
            app:fab_colorNormal="@color/accent"
            app:fab_colorPressed="@color/fab_pressed"
            app:fab_size="mini"
            app:fab_label="New Photo" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_add_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_note_add_white_24dp"
            app:fab_colorNormal="@color/accent"
            app:fab_colorPressed="@color/fab_pressed"
            app:fab_size="mini"
            app:fab_label="New Note" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>